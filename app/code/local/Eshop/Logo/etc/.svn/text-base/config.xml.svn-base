<?xml version="1.0"?>
<config>
  <modules>
    <Eshop_Logo>
      <version>0.1.0</version>
    </Eshop_Logo>
  </modules>
  <global>
    <helpers>
      <logo>
        <class>Eshop_Logo_Helper</class>
      </logo>
    </helpers>
	<blocks>
	  <logo>
		<class>Eshop_Logo_Block</class>
	  </logo>
	</blocks>
	<models>
	  <logo>
		<class>Eshop_Logo_Model</class>
		<resourceModel>logo_mysql4</resourceModel>
	  </logo>
	  <logo_mysql4>
		<class>Eshop_Logo_Model_Mysql4</class>
		<entities>		  
			  <logo>
				<table>logo</table>
			  </logo>
        </entities>
	  </logo_mysql4>
	</models>
	<resources>
	  <logo_setup>
		<setup>
		  <module>Eshop_Logo</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </logo_setup>
	  <logo_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </logo_write>
	  <logo_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </logo_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <logo>
	    <use>admin</use>
		<args>
		  <module>Eshop_Logo</module>
		  <frontName>logo</frontName>
		</args>
	  </logo>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <logo module="logo">
		<title>Logo</title>
		<sort_order>100</sort_order>
		<children>
		  <logo module="logo">
		    <title>Manage Logo</title>
			<sort_order>0</sort_order>
			<action>logo/adminhtml_logo</action>
		  </logo>
		</children>
	  </logo>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<logo translate="title" module="logo">
			  <title>Logo</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <logo translate="title">
			<title>Manage Logo</title>
			<sort_order>0</sort_order>
		  </logo>
			  </children>
			</logo>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<logo>
		  <file>logo.xml</file>
		</logo>
	  </updates>
	</layout>
  </adminhtml>
</config> 