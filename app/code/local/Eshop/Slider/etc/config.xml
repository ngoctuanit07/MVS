<?xml version="1.0"?>
<config>
  <modules>
    <Eshop_Slider>
      <version>0.1.0</version>
    </Eshop_Slider>
  </modules>
  <global>
    <helpers>
      <slider>
        <class>Eshop_Slider_Helper</class>
      </slider>
    </helpers>
	<blocks>
	  <slider>
		<class>Eshop_Slider_Block</class>
	  </slider>
	</blocks>
	<models>
	  <slider>
		<class>Eshop_Slider_Model</class>
		<resourceModel>slider_mysql4</resourceModel>
	  </slider>
	  <slider_mysql4>
		<class>Eshop_Slider_Model_Mysql4</class>
		<entities>		  
			  <slider>
				<table>slider</table>
			  </slider>
		</entities>
	  </slider_mysql4>
	</models>
	<resources>
	  <slider_setup>
		<setup>
		  <module>Eshop_Slider</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </slider_setup>
	  <slider_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </slider_write>
	  <slider_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </slider_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <slider>
	    <use>admin</use>
		<args>
		  <module>Eshop_Slider</module>
		  <frontName>slider</frontName>
		</args>
	  </slider>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <slider module="slider">
		<title>Slider</title>
		<sort_order>100</sort_order>
		<children>
		  <slider module="slider">
		    <title>Manage Slider</title>
			<sort_order>0</sort_order>
			<action>slider/adminhtml_slider</action>
		  </slider>
		</children>
	  </slider>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<slider translate="title" module="slider">
			  <title>Slider</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <slider translate="title">
			<title>Manage Slider</title>
			<sort_order>0</sort_order>
		  </slider>
			  </children>
			</slider>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<slider>
		  <file>slider.xml</file>
		</slider>
	  </updates>
	</layout>
  </adminhtml>
</config> 